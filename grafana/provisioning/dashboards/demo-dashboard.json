{
  "id": null,
  "title": "Demo App Metrics",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests per Second",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (route)",
          "legendFormat": "{{route}}"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Error Rate",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status!=\"200\"}[1m])) by (status)",
          "legendFormat": "Status {{status}}"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Latency (p50, p90, p99)",
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, route))",
          "legendFormat": "p50 {{route}}"
        },
        {
          "expr": "histogram_quantile(0.9, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, route))",
          "legendFormat": "p90 {{route}}"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, route))",
          "legendFormat": "p99 {{route}}"
        }
      ],
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 8 }
    }
  ]
}
