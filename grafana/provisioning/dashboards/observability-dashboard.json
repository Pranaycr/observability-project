{
  "id": null,
  "title": "Demo App Metrics",
  "tags": ["demo-app", "observability"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests per Second",
      "targets": [
        {
          "expr": "sum by (route) (rate(http_requests_total[1m]))",
          "legendFormat": "{{route}}"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Error Rate (by status)",
      "targets": [
        {
          "expr": "sum by (status) (rate(http_requests_total{status!=\"200\"}[1m]))",
          "legendFormat": "Status {{status}}"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Request Duration (p50, p90, p99)",
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum by (le, route) (rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "p50 - {{route}}"
        },
        {
          "expr": "histogram_quantile(0.9, sum by (le, route) (rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "p90 - {{route}}"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le, route) (rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "p99 - {{route}}"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 }
    }
  ]
}
